<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom = "5dp"
    android:background="@color/white"
    android:padding="5dp">

    <TextView
        android:id="@+id/ReviewTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Review Title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/RateTv"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReviewTitleTv"
        android:layout_alignStart="@+id/ReviewTitleTv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="307dp"
        android:text="Rate"
        android:textColor="#939292"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ReviewTitleTv"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/ReviewTitleTv"
        android:text="Time"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/userAddRateTv"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-25dp"
        android:text="User Who Rate"
        android:textSize="16sp" />

</RelativeLayout>